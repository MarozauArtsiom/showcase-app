{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "@tokens/*": ["./src/tokens/*"],
      "@components/*": ["./src/components/*"],
    },
  },
  "include": ["src/components/**/*"],
  "exclude": ["node_modules", "dist"]
}
